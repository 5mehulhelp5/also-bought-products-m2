<widgets xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Widget:etc/widget.xsd">
    <widget id="mm_alsobought_widget" class="MageMoto\AlsoBought\Block\Product\ProductList\Widget" ttl="86400">
        <label>MageMoto Also Bought</label>
        <description>Show Also Bought Widget</description>
        <parameters>
            <parameter name="title" xsi:type="text" visible="true" sort_order="10">
                <label>Title of block</label>
            </parameter>
            <parameter name="design" xsi:type="select" source_model="MageMoto\AlsoBought\Model\Config\Source\Layout" visible="true" sort_order="20">
                <label>Layout</label>
            </parameter>
            <parameter name="show_list" xsi:type="multiselect" source_model="MageMoto\AlsoBought\Model\Config\Source\ShowList" visible="true" sort_order="30">
                <label>Show List</label>
            </parameter>
            <parameter name="template" xsi:type="select" required="true" visible="true">
                <label>Template</label>
                <options>
                    <option name="default" value="MageMoto_AlsoBought::product/list/alsobought.phtml" selected="true">
                        <label>Also Bought Products Template</label>
                    </option>
                    <option name="sidebar" value="MageMoto_AlsoBought::product/list/sidebar.phtml">
                        <label>Also Bought Products Template</label>
                    </option>
                </options>
            </parameter>
        </parameters>
        <containers>
            <container name="columns.top">
                <template name="grid" value="default" />
            </container>
            <container name="main">
                <template name="grid" value="default" />
            </container>
            <container name="content">
                <template name="grid" value="default" />
            </container>
            <container name="content.top">
                <template name="grid" value="default" />
            </container>
            <container name="content.bottom">
                <template name="grid" value="default" />
            </container>
            <container name="content.aside">
                <template name="grid" value="default" />
            </container>
            <container name="sidebar.main">
                <template name="grid" value="sidebar" />
            </container>
            <container name="sidebar.additional">
                <template name="grid" value="sidebar" />
            </container>
        </containers>
    </widget>
</widgets>